<configuration scan="true">
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <Target>System.out</Target>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p %c{1}:%L - %m%n</pattern>
    </encoder>
  </appender>
  <root level="info">
    <appender-ref ref="stdout"/>
  </root>
</configuration>

