<!--
	*** Web Services with SOAP and WSDL Configuration ***

	Start Membrane with:
	./service-proxy.sh -c conf/proxies-soap.xml
	or
    service-proxy.bat -c conf/proxies-soap.xml

-->
<spring:beans xmlns="http://membrane-soa.org/proxies/1/"
			  xmlns:spring="http://www.springframework.org/schema/beans"
			  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			  xsi:schemaLocation="http://www.springframework.org/schema/beans
	                    http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
	                    http://membrane-soa.org/proxies/1/ http://membrane-soa.org/schemas/proxies-1.xsd">

	<router>

		<!--
			 The soapProxy uses information from the WSDL like servicename and 
			 path for its configuration. 

			 Requests to the soapProxy are forwarded to the address taken from the WSDL.
			 
			 After starting open the following URLs in the browser:
			 http://localhost:2000/blz-service
			 http://localhost:2000/blz-service?wsdl
			 http://localhost:9000/admin/service-proxy/show?name=BLZService%3A2000

			 Documentation:
			 https://membrane-soa.org/api-gateway-doc/current/configuration/reference/soapProxy.htm

		-->
		<soapProxy port="2000" wsdl="http://www.thomas-bayer.com/axis2/services/BLZService?wsdl">
			<path>/blz-service</path> 
			<validator /> <!-- Validate requests and responses against the WSDL documentation -->
		</soapProxy>


		<!--
             This configuration does the same as the one on top. Here the proxy is
			 setup from basic components. Use the soapProxy for convenience and the
			 serviceProxy for flexibility.

			 Open:
			 - http://localhost:2001/blz-service

		-->
        <serviceProxy port="2001">
            <rewriter>
                <map from="^/blz-service(.*)" to="/axis2/services/BLZService$1" />
            </rewriter>
			<log/>
            <webServiceExplorer wsdl="http://www.thomas-bayer.com/axis2/services/BLZService?wsdl" />
            <wsdlRewriter  />
            <wsdlPublisher wsdl="http://www.thomas-bayer.com/axis2/services/BLZService?wsdl"/>
            <validator wsdl="http://www.thomas-bayer.com/axis2/services/BLZService?wsdl"/>
            <target host="www.thomas-bayer.com"/>
        </serviceProxy>
		

		<!-- 
			 Administration UI
             Open http://localhost:9000 

             Secure access for production: See proxies-secure-sample.xml
		-->
		<api name="Console" port="9000">
			<adminConsole />
		</api>

	</router>

</spring:beans>