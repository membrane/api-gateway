<spring:beans xmlns="http://membrane-soa.org/proxies/1/"
			  xmlns:spring="http://www.springframework.org/schema/beans"
			  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			  xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
	http://membrane-soa.org/proxies/1/ http://membrane-soa.org/schemas/proxies-1.xsd">

	<router>

		<serviceProxy name="Token Validator" port="2000">

			<!-- Validates tokens against authorization server - blocks request on invalid tokens -->
			<tokenValidator endpoint="http://localhost:7007/oauth2/userinfo"/>

			<target host="localhost" port="3000"/>

		</serviceProxy>


		<serviceProxy port="3000">
			<groovy>
				exc.setResponse(Response.ok('{"success":"true"}\n').contentType("application/json").build())
				RETURN
			</groovy>
		</serviceProxy>

		<serviceProxy port="9001">
			<adminConsole/>
		</serviceProxy>
	</router>

</spring:beans>
