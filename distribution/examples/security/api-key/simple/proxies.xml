<spring:beans xmlns="http://membrane-soa.org/proxies/1/"
              xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
					    http://membrane-soa.org/proxies/1/ http://membrane-soa.org/schemas/proxies-1.xsd">

    <router>

        <!--API key authentication, providing key is mandatory.-->
        <api port="2000">
            <apiKey>
                <!-- Register some API keys that will be permitted to access this API. -->
                <keys>
                    <secret value="demokey123" />
                </keys>

                <!-- Fetch the API key from header (X-Api-Key) or query parameter (&api-key). -->
                <headerExtractor />
                <queryParamExtractor />
            </apiKey>

            <!-- Use your backend through target instead of template and return.
                <target url="https://example.com"/>
            -->
            <static>Hidden API</static>
            <return/>
        </api>

    </router>

</spring:beans>