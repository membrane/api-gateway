<spring:beans xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://membrane-soa.org/proxies/1/"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
					    http://membrane-soa.org/proxies/1/ http://membrane-soa.org/schemas/proxies-1.xsd">

    <spring:bean class="com.predic8.membrane.core.interceptor.apikey.stores.ApiKeyFileStore">
        <spring:property name="location" value="./demo-keys.txt" />
    </spring:bean>

    <router>

        <api port="2000" name="hello">
            <apiKey required="true">
                <queryParamExtractor name="api-key"/>
            </apiKey>
            <response>
                <jwtSigner>
                    <jwk location="hello.jwk"/>
                </jwtSigner>
                <template>
                    {
                        "scopes": "${property.scopes}",
                        "aud": "order"
                    }
                </template>
                <setProperty name="scopes" value="${scopes}"/>
            </response>
            <return />
        </api>

        <api port="2001" name="order">
            <!-- validate, check scope  -->
        </api>

    </router>

</spring:beans>